import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Date;
import java.util.Locale;
import java.util.Scanner;//imported scanner

// Code by James, Kayla, and Sam
public class Bot {
    private static boolean isValidInput(String generalScanner) { //Determines if user entered valid command
        switch (generalScanner) {
            case "t!help":
                return true;
            case "t!task":
                return true;
            case "t!resource":
                return true;
            case "t!todo":
                return true;
            case "t!meme":
                return true;
        }
        return false;
    }

    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);// declared new scanner
        ArrayList<String> rolesList = new ArrayList<>();

        System.out.println("Hi my name is Tyrone and I am your Bot! To name your project type in: t!project <your project name here>\n");// Bot introduces itself
        String assignmentNameInput = "";
        String namePhrase = "t!project ";
        int loopTest1 = 0;
        String assignmentName = "";
        do {
            assignmentNameInput = s.nextLine();//Stores assignment name

            if (assignmentNameInput.toLowerCase().contains(namePhrase.toLowerCase())) {
                assignmentName = assignmentNameInput.substring(assignmentNameInput.indexOf("c") + 3);//Parameters
                loopTest1 = 2;
                System.out.println("Project " + assignmentName + " has been created");
                System.out.println("To give your project a due date, type in: t!date <mm/dd/yyyy>"); //Prompts user for assignment due date
            } else {
                loopTest1 = 1;
            }
        }
        while (loopTest1 == 1);

        String datePhrase = "t!date ";
        String dateInput = "";
        SimpleDateFormat dateFormat = new SimpleDateFormat("MM/dd/yyyy");
        int loopTest = 0;

        do {
            try {
                dateInput = s.nextLine();
                loopTest = 2;
                Date date = dateFormat.parse(dateInput.substring(dateInput.indexOf("e") + 2)); // check to see if they entered date in correct format
            } catch (ParseException e) {
                loopTest = 1;
                System.out.println(dateInput.substring(dateInput.indexOf("e") + 2));
                System.out.println(" Please input date in correct format");
            }
        }
        while (loopTest == 1);

        System.out.println("Loop done: dateInput = " + dateInput);

        if (dateInput.toLowerCase().contains(datePhrase.toLowerCase())) { // if statement to detect if they entered in a date phrase
            String officialDueDate = dateInput.substring(dateInput.indexOf("e") + 2);
            System.out.println(assignmentName + " has been given a due date of " + officialDueDate);
            System.out.println("For more commands to add to your project type in t!help");
        }

        String generalScanner = "";
        int loopTest2 = 0;
        String output = "";
        do {
            generalScanner = s.nextLine(); // general scanner that picks up certain key phrases
            if (!isValidInput(generalScanner)) {
                System.out.println(generalScanner + " is an invalid command. For more commands to add to your " +
                        "project type t!help");
            }
            if (isValidInput(generalScanner)) {

                switch (generalScanner) {
                    case "t!help":
                        System.out.println("");
                        System.out.println("");
                        System.out.println("");
                        System.out.println("");
                        System.out.println("");
                        System.out.println("");
                        break;
                    case "t!task":
                        //should add task to string array of tasks
                        output = "Task '" + generalScanner.substring(7) + "' added to ToDo List!";
                    case "todo":
                        //should print array of tasks
                    case "t!meme":
                        output = "Motivational meme coming your way!";
                        //getMeme();
                        loopTest2 = 1;
                }
            } else {
                loopTest2 = 1;
            }
        }
        while (loopTest2 == 1);
    }
}


